<h1>Books</h1>

<%=link_to "Book Ranking" ,rankings_path%>
<div>
  <%= button_to "Log out", destroy_user_session_path(current_user), method: :delete %>
</div>

<%= current_user.email %>

<h1>Articles</h1>
<ul>
  <% if current_user %>
    <li>
      Logged in: You have the ability to create and manage books.
    </li>
  <% else %>
    <li>
      Not Logged in: You have limited access to create and manage books.
    </li>
  <% end %>
</ul>

<div>
  <%= link_to "Create book", new_book_path %>
</div>

<div>
  <%= render @books %>
</div>

<div>
  <%= paginate @books %>
</div>


